{% extends 'layout/base.html.twig' %}

{# SETTINGS PAGE #}
{% set page_title = "Author index" %}


{% block title %}
	{{page_title}}
	|
	{{ parent() }}
{% endblock %}

{% block body %}

	<style>
		.no-bullets {
			list-style-type: none;
		}
	</style>


	<header class="page-header">
		<h2 class="page-title text-center">{{page_title}}</h2>
	</header>
	<main class="page-content">
		<h4 class="text-center mb-5">---- List of Authors ----</h4>
		<ul class="d-flex flex-wrap flex-row no-bullets justify-items-evenly">
			{% for author in authors %}
				<li class="m-4 p-4">
					<h5>Firstname :
						{{ author.firstname }}</h5>
					<p>Lastname :
						{{ author.lastname }}</p>
					<a href="{{url('author:index')}}" class="btn btn-outline-warning btn-sm">Back to authors liste</a>
					<a href="{{url('author:update', {id: author.id})}}" class="btn btn-outline-secondary btn-sm">Edit this author</a>
				</li>
			{% endfor %}
		</ul>

	</main>
	<footer class="page-footer">
		<a href="{{url('author:create')}}">Add a author</a>
	</footer>

{% endblock %}
